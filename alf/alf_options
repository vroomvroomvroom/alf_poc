installer-language=en

##
# set which components to install
#enable-components=javaalfresco,alfrescosolr,libreofficecomponent
enable-components=javaalfresco,libreofficecomponent,postgres

## normal disable list
#disable-components=postgres,alfrescowcmqs,alfrescogoogledocs,alfrescosolr4
##
# enable postgre for quick testing
disable-components=alfrescowcmqs,alfrescogoogledocs,alfrescosolr4

prefix=/opt/app/alfresco_01

##
# database section

#jdbc_url=jdbc:postgresql:@alf_db_serv:5432
jdbc_url=jdbc:postgresql:@alf_db_serv:5432
jdbc_driver=org.postgresql.Driver
jdbc_database=alfresco
jdbc_username=alfresco
jdbc_password=alfresco123

## 
# tomcat section
tomcat_server_directory=/opt/app/alfresco_01/tomcat_01
